<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginLeft="1dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#ECECEC"
                    android:elevation="5dp"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="4dp"
                    >
                    <ImageView
                        android:id="@+id/product_image"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_image_24"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/product_name"
                        android:textSize="14dp"
                        android:layout_gravity="right"
                        android:fontFamily="@font/nunito_reg"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/home_product_princes"
                            android:text="₹435.00"
                            android:paddingTop="2dp"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:fontFamily="monospace"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            />



                        <LinearLayout
                            android:layout_weight="9"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/decrement"
                                android:background="@drawable/reppel_categery"
                                android:layout_width="20dp"
                                android:clickable="true"
                                android:src="@drawable/ic_minuss"
                                android:layout_height="20dp" />
                            <TextView
                                android:id="@+id/count"
                                android:layout_weight="2"
                                android:text="Qty-1"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/home_add_more_icon"
                                android:layout_width="0dp"
                                android:layout_height="20dp" />

                            <ImageView
                                android:id="@+id/increment"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:clickable="true"

                                android:background="@drawable/reppel_categery"
                                android:src="@drawable/ic_adds"
                                android:layout_height="20dp" />
                            <ImageView
                                android:id="@+id/iv_delete"
                                android:layout_width="wrap_content"
                                android:clickable="true"
                                android:layout_weight="2"
                                android:src="@drawable/ic_baseline_delete_24"
                                android:layout_gravity="right"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/product_price"
                        android:text="₹435.00"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_reg"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"></View>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>






